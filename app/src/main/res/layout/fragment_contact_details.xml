<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/contact_details_container"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/login_gradient_background">

    <!-- Top App Bar with Glass Effect -->
    <com.google.android.material.appbar.AppBarLayout
        android:id="@+id/app_bar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@android:color/transparent"
        app:elevation="0dp">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingHorizontal="20dp"
            android:paddingTop="48dp"
            android:paddingBottom="16dp">

            <com.google.android.material.card.MaterialCardView
                android:id="@+id/cv_back"
                android:layout_width="48dp"
                android:layout_height="48dp"
                app:cardBackgroundColor="#33FFFFFF"
                app:cardCornerRadius="16dp"
                app:cardElevation="0dp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent">

                <com.airbnb.lottie.LottieAnimationView
                    android:id="@+id/iv_back"
                    android:layout_width="48dp"
                    android:layout_height="48dp"
                    android:layout_gravity="center"
                    android:contentDescription="Back"
                    android:scaleType="centerCrop"
                    app:lottie_autoPlay="true"
                    app:lottie_loop="true"
                    app:lottie_rawRes="@raw/back_button_animation" />
            </com.google.android.material.card.MaterialCardView>

            <!-- Contact Details Title with Custom Font -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="16dp"
                android:fontFamily="@font/poppins_bold"
                android:text="Contact Details"
                android:textColor="#FFFFFF"
                android:textSize="24sp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toEndOf="@id/cv_back"
                app:layout_constraintTop_toTopOf="parent" />

            <!-- Help Button with Animation -->
            <com.google.android.material.card.MaterialCardView
                android:id="@+id/cv_help"
                android:layout_width="48dp"
                android:layout_height="48dp"
                app:cardBackgroundColor="#33FFFFFF"
                app:cardCornerRadius="16dp"
                app:cardElevation="0dp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="parent">

                <com.airbnb.lottie.LottieAnimationView
                    android:id="@+id/iv_help"
                    android:layout_width="48dp"
                    android:layout_height="48dp"
                    android:layout_gravity="center"
                    android:contentDescription="Help"
                    android:scaleType="centerCrop"
                    app:lottie_autoPlay="true"
                    app:lottie_loop="true"
                    app:lottie_rawRes="@raw/info" />
            </com.google.android.material.card.MaterialCardView>
        </androidx.constraintlayout.widget.ConstraintLayout>
    </com.google.android.material.appbar.AppBarLayout>

    <!-- Main Content with Custom Scroll Animation -->
    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fillViewport="true"
        app:layout_behavior="@string/appbar_scrolling_view_behavior">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:paddingHorizontal="20dp"
            android:paddingTop="16dp"
            android:paddingBottom="100dp">

            <!-- Progress Steps Card -->
            <LinearLayout
                android:orientation="vertical"
                android:id="@+id/card_progress_steps"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:clipToPadding="true"
                android:clipToOutline="true"
                android:backgroundTint="#D0FFFFFF"
                android:background="@drawable/glass_background"
                android:padding="12dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:padding="12dp"
                    android:gravity="center_vertical">

                    <LinearLayout
                        android:id="@+id/card_basic_info_indicator"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:orientation="vertical">

                        <com.google.android.material.card.MaterialCardView
                            android:layout_width="36dp"
                            android:layout_height="36dp"
                            android:layout_gravity="center"
                            app:cardBackgroundColor="#1A5276"
                            app:cardCornerRadius="18dp"
                            app:cardElevation="2dp">

                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:fontFamily="@font/poppins_bold"
                                android:gravity="center"
                                android:layout_gravity="center"
                                android:text="1"
                                android:textColor="#FFFFFF"
                                android:textSize="16sp" />
                        </com.google.android.material.card.MaterialCardView>

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="4dp"
                            android:fontFamily="@font/poppins_medium"
                            android:text="Basic Info"
                            android:textColor="#1A5276"
                            android:textSize="10sp" />
                    </LinearLayout>

                    <View
                        android:layout_marginBottom="10dp"
                        android:layout_width="24dp"
                        android:layout_height="2dp"
                        android:background="#1A5276" />

                    <LinearLayout
                        android:id="@+id/card_account_indicator"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:orientation="vertical">

                        <com.google.android.material.card.MaterialCardView
                            android:layout_width="36dp"
                            android:layout_height="36dp"
                            app:cardBackgroundColor="#1A5276"
                            app:cardCornerRadius="18dp"
                            app:cardElevation="2dp">

                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:fontFamily="@font/poppins_bold"
                                android:gravity="center"
                                android:text="2"
                                android:textColor="#FFFFFF"
                                android:textSize="16sp" />
                        </com.google.android.material.card.MaterialCardView>

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="4dp"
                            android:fontFamily="@font/poppins_medium"
                            android:text="Academic"
                            android:textColor="#1A5276"
                            android:textSize="10sp" />
                    </LinearLayout>

                    <View
                        android:layout_marginBottom="10dp"
                        android:layout_width="24dp"
                        android:layout_height="2dp"
                        android:background="#1A5276" />

                    <LinearLayout
                        android:id="@+id/card_academic_indicator"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:orientation="vertical">

                        <com.google.android.material.card.MaterialCardView
                            android:layout_width="36dp"
                            android:layout_height="36dp"
                            android:backgroundTint="#1A5276"
                            app:cardCornerRadius="18dp"
                            app:cardElevation="2dp">

                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:fontFamily="@font/poppins_bold"
                                android:gravity="center"
                                android:text="3"
                                android:textColor="#FFFF"
                                android:textSize="16sp" />
                        </com.google.android.material.card.MaterialCardView>

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="4dp"
                            android:fontFamily="@font/poppins_medium"
                            android:text="Account"
                            android:textColor="#1A5276"
                            android:textSize="10sp" />
                    </LinearLayout>

                    <View
                        android:layout_marginBottom="10dp"
                        android:layout_width="24dp"
                        android:layout_height="2dp"
                        android:background="#1A5276" />

                    <LinearLayout
                        android:id="@+id/card_contact_indicator"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:orientation="vertical">

                        <com.google.android.material.card.MaterialCardView
                            android:layout_width="36dp"
                            android:layout_height="36dp"
                            app:cardBackgroundColor="#1A5276"
                            app:cardCornerRadius="18dp"
                            app:cardElevation="2dp">

                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:fontFamily="@font/poppins_bold"
                                android:gravity="center"
                                android:text="4"
                                android:textColor="#FFFF"
                                android:textSize="16sp" />
                        </com.google.android.material.card.MaterialCardView>

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="4dp"
                            android:fontFamily="@font/poppins_medium"
                            android:text="Contact"
                            android:textColor="#1A5276"
                            android:textSize="10sp" />
                    </LinearLayout>
                </LinearLayout>
            </LinearLayout>

             <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="24dp"
                android:gravity="center_vertical"
                android:orientation="horizontal">

                <com.airbnb.lottie.LottieAnimationView
                    android:layout_width="32dp"
                    android:layout_height="32dp"
                    app:lottie_autoPlay="true"
                    app:lottie_loop="true"
                    app:lottie_rawRes="@raw/phone" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="8dp"
                    android:fontFamily="@font/poppins_semibold"
                    android:text="Contact Information"
                    android:textColor="#FFFFFF"
                    android:textSize="20sp" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/card_basic_info"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="12dp"
                app:cardBackgroundColor="#80FFFFFF"
                app:cardCornerRadius="24dp"
                app:cardElevation="8dp"
                app:strokeColor="#33FFFFFF"
                app:strokeWidth="1dp"
                android:backgroundTint="#9DFFFFFF"
                android:background="@drawable/glass_background">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="20dp">


                    <com.google.android.material.textfield.TextInputLayout
                        android:clipToPadding="true"
                        android:clipToOutline="true"
                        android:id="@+id/til_mobile_number"
                        style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:hint="Mobile Number"
                        app:hintTextColor="@color/white"
                        app:hintAnimationEnabled="true"
                        android:layout_marginBottom="16dp"
                        app:hintEnabled="true"
                        app:boxBackgroundMode="outline"
                        app:boxBackgroundColor="#54FFFFFF"
                        app:boxStrokeColor="@color/white"
                        app:boxStrokeWidthFocused="2dp"
                        app:boxCornerRadiusTopStart="20dp"
                        app:boxCornerRadiusTopEnd="20dp"
                        app:boxCornerRadiusBottomStart="20dp"
                        app:boxCornerRadiusBottomEnd="20dp"
                        app:startIconTint="#6200EE"
                        app:endIconTint="#6200EE"
                        android:backgroundTint="@android:color/transparent">

                        <com.google.android.material.textfield.TextInputEditText
                            android:clipToOutline="true"
                            android:id="@+id/et_mobile_number"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:fontFamily="@font/poppins_regular"
                            android:textColor="#222222"
                            android:padding="12dp"/>
                    </com.google.android.material.textfield.TextInputLayout>

                    <com.google.android.material.textfield.TextInputLayout
                        android:clipToPadding="true"
                        android:clipToOutline="true"
                        android:id="@+id/til_alternate_number"
                        style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:hint="Alternate Number (Optional)"
                        app:hintTextColor="@color/white"
                        app:hintAnimationEnabled="true"
                        android:layout_marginBottom="16dp"
                        app:hintEnabled="true"
                        app:boxBackgroundMode="outline"
                        app:boxBackgroundColor="#54FFFFFF"
                        app:boxStrokeColor="@color/white"
                        app:boxStrokeWidthFocused="2dp"
                        app:boxCornerRadiusTopStart="20dp"
                        app:boxCornerRadiusTopEnd="20dp"
                        app:boxCornerRadiusBottomStart="20dp"
                        app:boxCornerRadiusBottomEnd="20dp"
                        app:startIconTint="#6200EE"
                        app:endIconTint="#6200EE"
                        android:backgroundTint="@android:color/transparent">

                        <com.google.android.material.textfield.TextInputEditText
                            android:clipToOutline="true"
                            android:id="@+id/et_alternate_number"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:fontFamily="@font/poppins_regular"
                            android:textColor="#222222"
                            android:padding="12dp"/>
                    </com.google.android.material.textfield.TextInputLayout>
                    <com.google.android.material.textfield.TextInputLayout
                        android:clipToPadding="true"
                        android:clipToOutline="true"
                        android:id="@+id/til_permanent_address"
                        style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:hint="Permanent Address"
                        app:hintTextColor="@color/white"
                        app:hintAnimationEnabled="true"
                        android:layout_marginBottom="16dp"
                        app:hintEnabled="true"
                        app:boxBackgroundMode="outline"
                        app:boxBackgroundColor="#54FFFFFF"
                        app:boxStrokeColor="@color/white"
                        app:boxStrokeWidthFocused="2dp"
                        app:boxCornerRadiusTopStart="20dp"
                        app:boxCornerRadiusTopEnd="20dp"
                        app:boxCornerRadiusBottomStart="20dp"
                        app:boxCornerRadiusBottomEnd="20dp"
                        app:startIconTint="#6200EE"
                        app:endIconTint="#6200EE"
                        android:backgroundTint="@android:color/transparent">

                        <com.google.android.material.textfield.TextInputEditText
                            android:clipToOutline="true"
                            android:id="@+id/et_permanent_address"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:fontFamily="@font/poppins_regular"
                            android:textColor="#222222"
                            android:padding="12dp"/>
                    </com.google.android.material.textfield.TextInputLayout>
                    <com.google.android.material.textfield.TextInputLayout
                        android:clipToPadding="true"
                        android:clipToOutline="true"
                        android:id="@+id/til_city"
                        style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:hint="City"
                        app:hintTextColor="@color/white"
                        app:hintAnimationEnabled="true"
                        android:layout_marginBottom="16dp"
                        app:hintEnabled="true"
                        app:boxBackgroundMode="outline"
                        app:boxBackgroundColor="#54FFFFFF"
                        app:boxStrokeColor="@color/white"
                        app:boxStrokeWidthFocused="2dp"
                        app:boxCornerRadiusTopStart="20dp"
                        app:boxCornerRadiusTopEnd="20dp"
                        app:boxCornerRadiusBottomStart="20dp"
                        app:boxCornerRadiusBottomEnd="20dp"
                        app:startIconTint="#6200EE"
                        app:endIconTint="#6200EE"
                        android:backgroundTint="@android:color/transparent">

                        <com.google.android.material.textfield.TextInputEditText
                            android:clipToOutline="true"
                            android:id="@+id/et_city"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:fontFamily="@font/poppins_regular"
                            android:textColor="#222222"
                            android:padding="12dp"/>
                    </com.google.android.material.textfield.TextInputLayout>
                    <com.google.android.material.textfield.TextInputLayout
                        android:clipToPadding="true"
                        android:clipToOutline="true"
                        android:id="@+id/til_province"
                        style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox.ExposedDropdownMenu"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        app:hintTextColor="@color/white"
                        app:hintAnimationEnabled="true"
                        android:layout_marginBottom="16dp"
                        app:boxBackgroundMode="outline"
                        app:boxBackgroundColor="#54FFFFFF"
                        app:boxStrokeColor="@color/white"
                        app:boxStrokeWidthFocused="2dp"
                        app:boxCornerRadiusTopStart="20dp"
                        app:boxCornerRadiusTopEnd="20dp"
                        app:boxCornerRadiusBottomStart="20dp"
                        app:boxCornerRadiusBottomEnd="20dp"
                        app:startIconTint="#6200EE"
                        app:endIconTint="#6200EE"
                        android:backgroundTint="@android:color/transparent">

                        <AutoCompleteTextView
                            android:padding="12dp"
                            android:hint="Province"
                            android:id="@+id/dropdown_province"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:fontFamily="@font/poppins_medium"
                            android:inputType="none"
                            android:textColor="#333333" />

                    </com.google.android.material.textfield.TextInputLayout>
                    <com.google.android.material.textfield.TextInputLayout
                        android:clipToPadding="true"
                        android:clipToOutline="true"
                        android:id="@+id/til_postal_code"
                        style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:hint="Postal Code"
                        app:hintTextColor="@color/white"
                        app:hintAnimationEnabled="true"
                        android:layout_marginBottom="16dp"
                        app:hintEnabled="true"
                        app:boxBackgroundMode="outline"
                        app:boxBackgroundColor="#54FFFFFF"
                        app:boxStrokeColor="@color/white"
                        app:boxStrokeWidthFocused="2dp"
                        app:boxCornerRadiusTopStart="20dp"
                        app:boxCornerRadiusTopEnd="20dp"
                        app:boxCornerRadiusBottomStart="20dp"
                        app:boxCornerRadiusBottomEnd="20dp"
                        app:startIconTint="#6200EE"
                        app:endIconTint="#6200EE"
                        android:backgroundTint="@android:color/transparent">

                        <com.google.android.material.textfield.TextInputEditText
                            android:clipToOutline="true"
                            android:id="@+id/et_postal_code"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:fontFamily="@font/poppins_regular"
                            android:textColor="#222222"
                            android:padding="12dp"/>
                    </com.google.android.material.textfield.TextInputLayout>

                </LinearLayout>
            </LinearLayout>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="24dp"
                android:gravity="center_vertical"
                android:orientation="horizontal">

                <com.airbnb.lottie.LottieAnimationView
                    android:layout_width="32dp"
                    android:layout_height="32dp"
                    app:lottie_autoPlay="true"
                    app:lottie_loop="true"
                    app:lottie_rawRes="@raw/alert" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="8dp"
                    android:fontFamily="@font/poppins_semibold"
                    android:text="Emergency Contact"
                    android:textColor="#FFFFFF"
                    android:textSize="20sp" />
            </LinearLayout>



            <LinearLayout
                android:id="@+id/card_emergency_info"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="12dp"
                app:cardBackgroundColor="#80FFFFFF"
                app:cardCornerRadius="24dp"
                app:cardElevation="8dp"
                app:strokeColor="#33FFFFFF"
                app:strokeWidth="1dp"
                android:backgroundTint="#9DFFFFFF"
                android:background="@drawable/glass_background">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="20dp">



                    <com.google.android.material.textfield.TextInputLayout
                        android:clipToPadding="true"
                        android:clipToOutline="true"
                        android:id="@+id/til_emergency_name"
                        style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:hint="Emergency Contact Name"
                        app:hintTextColor="@color/white"
                        app:hintAnimationEnabled="true"
                        android:layout_marginBottom="16dp"
                        app:hintEnabled="true"
                        app:boxBackgroundMode="outline"
                        app:boxBackgroundColor="#54FFFFFF"
                        app:boxStrokeColor="@color/white"
                        app:boxStrokeWidthFocused="2dp"
                        app:boxCornerRadiusTopStart="20dp"
                        app:boxCornerRadiusTopEnd="20dp"
                        app:boxCornerRadiusBottomStart="20dp"
                        app:boxCornerRadiusBottomEnd="20dp"
                        app:startIconTint="#6200EE"
                        app:endIconTint="#6200EE"
                        android:backgroundTint="@android:color/transparent">

                        <com.google.android.material.textfield.TextInputEditText
                            android:clipToOutline="true"
                            android:id="@+id/et_emergency_name"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:fontFamily="@font/poppins_regular"
                            android:textColor="#222222"
                            android:padding="12dp"/>
                    </com.google.android.material.textfield.TextInputLayout>
                    <com.google.android.material.textfield.TextInputLayout
                        android:clipToPadding="true"
                        android:clipToOutline="true"
                        android:id="@+id/til_emergency_relationship"
                        style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox.ExposedDropdownMenu"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        app:hintTextColor="@color/white"
                        app:hintAnimationEnabled="true"
                        android:layout_marginBottom="16dp"
                        app:boxBackgroundMode="outline"
                        app:boxBackgroundColor="#54FFFFFF"
                        app:boxStrokeColor="@color/white"
                        app:boxStrokeWidthFocused="2dp"
                        app:boxCornerRadiusTopStart="20dp"
                        app:boxCornerRadiusTopEnd="20dp"
                        app:boxCornerRadiusBottomStart="20dp"
                        app:boxCornerRadiusBottomEnd="20dp"
                        app:startIconTint="#6200EE"
                        app:endIconTint="#6200EE"
                        android:backgroundTint="@android:color/transparent">

                        <AutoCompleteTextView
                            android:padding="12dp"
                            android:hint="Relationship"
                            android:id="@+id/dropdown_emergency_relationship"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:fontFamily="@font/poppins_medium"
                            android:inputType="none"
                            android:textColor="#333333" />

                    </com.google.android.material.textfield.TextInputLayout>
                    <com.google.android.material.textfield.TextInputLayout
                        android:clipToPadding="true"
                        android:clipToOutline="true"
                        android:id="@+id/til_emergency_number"
                        style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:hint="Emergency Contact Number"
                        app:hintTextColor="@color/white"
                        app:hintAnimationEnabled="true"
                        android:layout_marginBottom="16dp"
                        app:hintEnabled="true"
                        app:boxBackgroundMode="outline"
                        app:boxBackgroundColor="#54FFFFFF"
                        app:boxStrokeColor="@color/white"
                        app:boxStrokeWidthFocused="2dp"
                        app:boxCornerRadiusTopStart="20dp"
                        app:boxCornerRadiusTopEnd="20dp"
                        app:boxCornerRadiusBottomStart="20dp"
                        app:boxCornerRadiusBottomEnd="20dp"
                        app:startIconTint="#6200EE"
                        app:endIconTint="#6200EE"
                        android:backgroundTint="@android:color/transparent">

                        <com.google.android.material.textfield.TextInputEditText
                            android:clipToOutline="true"
                            android:id="@+id/et_emergency_number"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:fontFamily="@font/poppins_regular"
                            android:textColor="#222222"
                            android:padding="12dp"/>
                    </com.google.android.material.textfield.TextInputLayout>

                </LinearLayout>
            </LinearLayout>

            <com.google.android.material.button.MaterialButton
                android:id="@+id/btn_submit"
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:layout_marginTop="24dp"
                android:fontFamily="@font/poppins_medium"
                android:text="Complete Registration"
                android:textColor="#FFFFFF"
                android:textSize="16sp"
                app:backgroundTint="#1A5276"
                app:cornerRadius="16dp"
                app:iconGravity="end"
                app:iconTint="#FFFFFF" />

            <com.google.android.material.button.MaterialButton
                android:id="@+id/btn_cancel"
                style="@style/Widget.MaterialComponents.Button.OutlinedButton"
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:layout_marginTop="16dp"
                android:fontFamily="@font/poppins_medium"
                android:text="Cancel"
                android:textColor="#FF5252"
                android:textSize="16sp"
                app:cornerRadius="16dp"
                app:strokeColor="#FF5252"
                app:strokeWidth="1dp" />

        </LinearLayout>
    </androidx.core.widget.NestedScrollView>

    <FrameLayout
        android:id="@+id/success_overlay"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#80000000"
        android:clickable="true"
        android:focusable="true"
        android:visibility="gone">

        <com.google.android.material.card.MaterialCardView
            android:layout_width="300dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            app:cardBackgroundColor="#FFFFFF"
            app:cardCornerRadius="24dp"
            app:cardElevation="10dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center"
                android:orientation="vertical"
                android:padding="24dp">

                <com.airbnb.lottie.LottieAnimationView
                    android:layout_width="150dp"
                    android:layout_height="150dp"
                    app:lottie_autoPlay="true"
                    app:lottie_loop="false"
                    app:lottie_rawRes="@raw/successfull" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="16dp"
                    android:fontFamily="@font/poppins_bold"
                    android:text="Registration Successful!"
                    android:textColor="#1A5276"
                    android:textSize="22sp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8dp"
                    android:fontFamily="@font/poppins_regular"
                    android:gravity="center"
                    android:text="Student has been successfully registered in the system."
                    android:textColor="#333333"
                    android:textSize="16sp" />

                <com.google.android.material.button.MaterialButton
                    android:id="@+id/btn_go_to_dashboard"
                    android:layout_width="match_parent"
                    android:layout_height="56dp"
                    android:layout_marginTop="24dp"
                    android:fontFamily="@font/poppins_medium"
                    android:text="Go to Dashboard"
                    android:textColor="#FFFFFF"
                    android:textSize="16sp"
                    app:backgroundTint="#1A5276"
                    app:cornerRadius="16dp" />
            </LinearLayout>
        </com.google.android.material.card.MaterialCardView>
    </FrameLayout>

    <FrameLayout
        android:id="@+id/loading_overlay"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#80000000"
        android:clickable="true"
        android:focusable="true"
        android:visibility="gone">

        <com.google.android.material.card.MaterialCardView
            android:layout_width="200dp"
            android:layout_height="200dp"
            android:layout_gravity="center"
            app:cardBackgroundColor="#CC1A5276"
            app:cardCornerRadius="24dp"
            app:cardElevation="10dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center"
                android:orientation="vertical"
                android:padding="16dp">

                <com.airbnb.lottie.LottieAnimationView
                    android:layout_width="120dp"
                    android:layout_height="120dp"
                    app:lottie_autoPlay="true"
                    app:lottie_loop="true"
                    app:lottie_rawRes="@raw/loading_animation" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="16dp"
                    android:fontFamily="@font/poppins_semibold"
                    android:text="Processing..."
                    android:textColor="#FFFFFF"
                    android:textSize="18sp" />
            </LinearLayout>
        </com.google.android.material.card.MaterialCardView>
    </FrameLayout>
</androidx.coordinatorlayout.widget.CoordinatorLayout>