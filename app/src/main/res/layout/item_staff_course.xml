<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/card_course"
    android:layout_width="280dp"
    android:layout_height="wrap_content"
    android:layout_marginTop="12dp"
    android:background="@drawable/glass_background"
    android:backgroundTint="#FFFFFF"
    android:clipToOutline="true"
    android:clipToPadding="true"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/glass_background"
        android:backgroundTint="#FFFFFF"
        android:clipToOutline="true"
        android:clipToPadding="true"
        android:orientation="vertical"
        android:padding="20dp">

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="120dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/glass_background"
                android:backgroundTint="#FFFFFF"
                android:clipToOutline="true"
                android:clipToPadding="true"
                android:orientation="vertical">

                <ImageView
                    android:id="@+id/iv_course_image"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:scaleType="centerCrop"
                    tools:src="@drawable/ccc" />
            </LinearLayout>


            <com.google.android.material.chip.Chip
                android:id="@+id/chip_student_count"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="top|end"
                android:layout_margin="8dp"
                android:text="45 Students"
                android:textColor="#FFFFFF"
                android:textSize="12sp"
                app:chipBackgroundColor="#1A5276" />
        </FrameLayout>


        <TextView
            android:id="@+id/tv_course_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="12dp"
            android:fontFamily="@font/poppins_bold"
            android:textColor="@color/DarkBlue"
            android:textSize="18sp"
            tools:text="Advanced Machine Learning" />


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="4dp"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/tv_course_id"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/poppins_medium"
                android:textColor="@color/DarkBlue2"
                android:textSize="12sp"
                tools:text="CS401" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="8dp"
                android:fontFamily="@font/poppins_regular"
                android:text="â€¢"
                android:textColor="@color/DarkBlue2"
                android:textSize="12sp" />

            <TextView
                android:id="@+id/tv_semester"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/poppins_medium"
                android:textColor="@color/DarkBlue2"
                android:textSize="12sp"
                tools:text="Spring 2024" />
        </LinearLayout>


        <TextView
            android:id="@+id/tv_course_description"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:ellipsize="end"
            android:fontFamily="@font/poppins_regular"
            android:maxLines="2"
            android:textColor="@color/DarkBlue"
            android:textSize="14sp"
            tools:text="This course covers advanced topics in machine learning including deep learning, reinforcement learning, and generative models." />


        <com.google.android.material.button.MaterialButton
            android:id="@+id/btn_course_details"
            style="@style/Widget.MaterialComponents.Button.OutlinedButton"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="12dp"
            android:text="View Course Details"
            android:textColor="@color/MiddleBlue"
            app:cornerRadius="12dp"
            app:strokeColor="@color/MiddleBlue" />
    </LinearLayout>
</LinearLayout>