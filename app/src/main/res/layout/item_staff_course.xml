<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/card_course"
    android:layout_width="280dp"
    android:layout_height="wrap_content"
    android:layout_marginStart="8dp"
    android:layout_marginEnd="8dp"
    app:cardBackgroundColor="#80FFFFFF"
    app:cardCornerRadius="20dp"
    app:cardElevation="8dp"
    app:strokeColor="#33FFFFFF"
    app:strokeWidth="1dp">

    <!-- Glass Morphism Effect Background -->
    <View
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/staff_glass_effect" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="16dp">

        <!-- Course Image with Animation -->
        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="120dp">

            <com.google.android.material.card.MaterialCardView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                app:cardCornerRadius="16dp"
                app:cardElevation="4dp">

                <ImageView
                    android:id="@+id/iv_course_image"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:scaleType="centerCrop"
                    tools:src="@drawable/ccc" />
            </com.google.android.material.card.MaterialCardView>

            <!-- Student Count Chip -->
            <com.google.android.material.chip.Chip
                android:id="@+id/chip_student_count"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="top|end"
                android:layout_margin="8dp"
                android:text="45 Students"
                android:textColor="#FFFFFF"
                android:textSize="12sp"
                app:chipBackgroundColor="#1A5276" />
        </FrameLayout>

        <!-- Course Title -->
        <TextView
            android:id="@+id/tv_course_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="12dp"
            android:fontFamily="@font/poppins_bold"
            android:textColor="#FFFFFF"
            android:textSize="18sp"
            tools:text="Advanced Machine Learning" />

        <!-- Course ID & Semester -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="4dp"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/tv_course_id"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/poppins_medium"
                android:textColor="#E6FFFFFF"
                android:textSize="12sp"
                tools:text="CS401" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="8dp"
                android:fontFamily="@font/poppins_regular"
                android:text="â€¢"
                android:textColor="#E6FFFFFF"
                android:textSize="12sp" />

            <TextView
                android:id="@+id/tv_semester"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/poppins_medium"
                android:textColor="#E6FFFFFF"
                android:textSize="12sp"
                tools:text="Spring 2024" />
        </LinearLayout>

        <!-- Course Description -->
        <TextView
            android:id="@+id/tv_course_description"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:ellipsize="end"
            android:fontFamily="@font/poppins_regular"
            android:maxLines="2"
            android:textColor="#E6FFFFFF"
            android:textSize="14sp"
            tools:text="This course covers advanced topics in machine learning including deep learning, reinforcement learning, and generative models." />

        <!-- Course Details Button -->
        <com.google.android.material.button.MaterialButton
            android:id="@+id/btn_course_details"
            style="@style/Widget.MaterialComponents.Button.OutlinedButton"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="12dp"
            android:text="View Course Details"
            android:textColor="#FFFFFF"
            app:cornerRadius="12dp"
            app:strokeColor="#FFFFFF" />
    </LinearLayout>
</com.google.android.material.card.MaterialCardView>