<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="300dp"
    android:layout_height="180dp"
    android:layout_margin="8dp"
    app:cardCornerRadius="16dp"
    app:cardElevation="6dp">

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <!-- Card Background with gradient overlay -->
        <ImageView
            android:id="@+id/iv_card_bg"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:scaleType="centerCrop"
            android:src="@drawable/card_bg_gradient_1" />

        <!-- Card overlay for text visibility -->
        <View
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@drawable/card_overlay_gradient" />

        <!-- Card Top Section with logo and chip -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="20dp"
            android:layout_marginTop="16dp"
            android:layout_marginEnd="20dp"
            android:orientation="horizontal">

            <!-- Bank Logo or Card Type -->
            <TextView
                android:id="@+id/tv_card_bank"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:fontFamily="@font/poppins_semibold"
                android:text="PRIME BANK"
                android:textColor="#FFFFFF"
                android:textSize="14sp" />

            <!-- Card Chip -->
            <ImageView
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:src="@drawable/ic_card_chip"
                android:contentDescription="Card Chip" />
        </LinearLayout>

        <!-- Card Number -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginStart="20dp"
            android:layout_marginEnd="20dp"
            android:orientation="vertical">

            <TextView
                android:id="@+id/tv_card_number"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="@font/poppins_medium"
                android:text="•••• •••• •••• 4587"
                android:textAlignment="center"
                android:textColor="#FFFFFF"
                android:textSize="18sp" />
        </LinearLayout>

        <!-- Card Bottom Section with name and expiry -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom"
            android:layout_marginStart="20dp"
            android:layout_marginEnd="20dp"
            android:layout_marginBottom="16dp"
            android:orientation="horizontal">

            <!-- Card Holder -->
            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/poppins_regular"
                    android:text="CARD HOLDER"
                    android:textColor="#DDFFFFFF"
                    android:textSize="10sp" />

                <TextView
                    android:id="@+id/tv_card_holder"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/poppins_medium"
                    android:text="JOHN SMITH"
                    android:textColor="#FFFFFF"
                    android:textSize="14sp" />
            </LinearLayout>

            <!-- Expiry Date -->
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/poppins_regular"
                    android:text="EXPIRES"
                    android:textColor="#DDFFFFFF"
                    android:textSize="10sp" />

                <TextView
                    android:id="@+id/tv_card_expiry"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/poppins_medium"
                    android:text="05/27"
                    android:textColor="#FFFFFF"
                    android:textSize="14sp" />
            </LinearLayout>

            <!-- Card Network logo -->
            <ImageView
                android:id="@+id/iv_card_network"
                android:layout_width="48dp"
                android:layout_height="30dp"
                android:layout_gravity="bottom"
                android:layout_marginStart="10dp"
                android:src="@drawable/ic_visa_logo"
                android:contentDescription="Card Network" />
        </LinearLayout>

        <!-- Selected Card Indicator -->
        <ImageView
            android:id="@+id/iv_card_selected"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_gravity="end|top"
            android:layout_margin="12dp"
            android:src="@drawable/ic_check_circle"
            android:visibility="gone"
            android:contentDescription="Selected Card" />

    </FrameLayout>
</androidx.cardview.widget.CardView>