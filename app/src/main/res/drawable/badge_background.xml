<?xml version="1.0" encoding="utf-8"?>
<shape xmlns:android="http://schemas.android.com/apk/res/android"
    android:shape="oval">

    <!-- Solid background color -->
    <solid android:color="#FF4081" /> <!-- Pink accent color, you can change this -->

    <!-- Optional: Add a stroke/border -->
    <stroke
        android:width="1dp"
        android:color="#FFFFFF" />

    <!-- Optional: Add padding within the badge -->
    <padding
        android:left="4dp"
        android:top="4dp"
        android:right="4dp"
        android:bottom="4dp" />

    <!-- Optional: Add a size (can be overridden in layout) -->
    <size
        android:width="24dp"
        android:height="24dp" />
</shape>